@{
    ViewData["Title"] = "CommentView";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form method="post" asp-controller="CommentView" asp-action="Index" class="border rounded shadow-sm p-4 bg-light">
                <h4 class="mb-4 text-center">コメント閲覧</h4>

                <div class="mb-3">
                    <label for="txtTheme" class="form-label">テーマ</label>
                    <input type="text" name="txtTheme" id="txtTheme" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="txtContent" class="form-label">内容</label>
                    <input type="text" name="txtContent" id="txtContent" class="form-control" />
                </div>

                <div class="table-responsive mb-4" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>タイトル</th>
                                <th>カテゴリー</th>
                                <th>投稿者</th>
                                <th>投稿日</th>
                                <th>内容</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* コメントデータをここに表示 *@
                        </tbody>
                    </table>
                </div>

                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <button type="submit" name="action" value="postcomment" class="btn btn-primary w-100">表示</button>
                    <button type="submit" name="action" value="back" class="btn btn-secondary w-100">戻る</button>
                </div>
            </form>
        </div>
    </div>
</div>