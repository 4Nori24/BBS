@model List<ReplyClass>
@{
    ViewData["Title"] = "CommentView";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form method="post" asp-controller="CommentView" asp-action="PostReplySimple" class="border rounded shadow-sm p-4 bg-light">
                <h4 class="mb-4 text-center">コメント閲覧</h4>

                <div class="mb-3">
                    <label for="txtTheme" class="form-label">テーマ</label>
                    <label id="txtTheme" class="form-control">@ViewBag.TitleText</label>
                </div>

                <div class="mb-3">
                    <label for="txtContent" class="form-label">投稿内容</label>
                    <label id="txtContent" class="form-control">@ViewBag.ContentText</label>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div>
                        @foreach (var item in Model)
                        {
                            <div class="post-meta text-muted small">
                                @item.Contributor @item.Date
                            </div>
                            <div class="post-content mt-2">
                                <p class="mb-0">@item.Content</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">まだコメントはありません。</p>
                }


                <input type="hidden" name="postNo" value="@ViewBag.PostNo" />

                <div class="mb-3">
                    <textarea name="reply" rows="5" class="form-control" placeholder="コメントを入力してください"></textarea>
                </div>

                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <button type="submit" class="btn btn-primary w-100">コメント投稿</button>
                    <button type="submit" name="action" value="back" class="btn btn-secondary w-100">戻る</button>
                </div>
            </form>
        </div>
    </div>
</div>