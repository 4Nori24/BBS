@{
    ViewData["Title"] = "CommentView";
}
@model List<ReplyClass>


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form method="post" asp-controller="CommentView" asp-action="Index" class="border rounded shadow-sm p-4 bg-light">
                <h4 class="mb-4 text-center">コメント閲覧</h4>

                @* <div class="mb-3">
                    <label for="txtTheme" class="form-label">テーマ</label>
                    <label name="txtTheme" id="txtTheme" class="form-control">@ViewBag.TitleText</label>
                </div> *@

                <div class="mb-3">
                    <label for="txtContent" class="form-label">投稿内容</label>
                    <label name="txtContent" id="txtContent" class="form-control">@ViewBag.ContentText</label>

                </div>

                @if (Model != null && Model.Any())
                {
                    <div>
                        @foreach (var item in Model)
                        {
                            <div class="post-meta text-muted small">
                                @item.Contributor @item.Date
                            </div>
                            <div class="post-content mt-2">
                                <p class="mb-0">@item.Content</p>
                            </div>
                        }
                    </div>
                }

                <input type="hidden" id="selectedPostNo" value="@Model.FirstOrDefault()?.PostNo" />

                <div class="mb-3">
                    <textarea name="txtReply" id="txtReply" rows="5" class="form-control"></textarea>
                </div>

                <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <button type="button" class="btn btn-primary w-100" onclick="submitReply()">コメント投稿</button>
                    <button type="submit" name="action" value="back" class="btn btn-secondary w-100">戻る</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function submitReply() {
        const reply = document.getElementById("txtReply").value;
        const postNo = document.getElementById("selectedPostNo").value;

                fetch('/CommentView/PostReplySimple', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ postNo, reply })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            window.location.href = data.redirectUrl; // ← ここでホームに遷移
        } else {
            alert("投稿失敗");
        }
    })

    }
</script>
