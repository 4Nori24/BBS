@{
    ViewData["Title"] = "View";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <form method="post" asp-controller="View" asp-action="Index" class="p-4 border rounded shadow-sm bg-light" style="max-width: 600px; width: 100%;">
        <div class="mb-3">
            <label class="form-label">タイトル</label>
            <div class="form-control-plaintext">@Model.Title</div>
        </div>

        <div class="mb-3">
            <label class="form-label">カテゴリー</label>
            <div class="form-control-plaintext">@Model.Category</div>
        </div>

        <div class="mb-3">
            <label class="form-label">投稿者</label>
            <div class="form-control-plaintext">@Model.Contributor</div>
        </div>

        <div class="mb-3">
            <label for="txtContent" class="form-label">内容</label>
            <textarea name="txtContent" id="txtContent" rows="5" class="form-control">@Model.Content</textarea>
        </div>

        <div class="d-flex justify-content-between">
            @* <button type="submit" name="action" value="postcomment" class="btn btn-primary">コメント投稿</button> *@
            <button type="submit" name="action" value="back" class="btn btn-secondary">戻る</button>
        </div>
    </form>
</div>