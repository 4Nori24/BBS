@{
    ViewData["Title"] = "NewPost";
}

<div class="d-flex justify-content-center align-items-center vh-100 px-3">
    <form method="post" asp-controller="NewPost" asp-action="Index"
          class="p-4 border rounded shadow-sm bg-light w-100"
          style="max-width: 720px;">

        <h4 class="mb-4 text-center">新規投稿フォーム</h4>

        <div class="mb-3">
            <label for="txtTitle" class="form-label">タイトル</label>
            <input type="text" name="txtTitle" id="txtTitle" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtCategory" class="form-label">カテゴリー</label>
            <input type="text" name="txtCategory" id="txtCategory" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtContent" class="form-label">内容</label>
            <textarea name="txtContent" id="txtContent" rows="5" class="form-control"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" name="action" value="post" class="btn btn-primary">新規投稿</button>
            <button type="submit" name="action" value="back" class="btn btn-secondary">戻る</button>
        </div>
    </form>
</div>