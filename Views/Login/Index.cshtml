@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <script src="~/js/Login.js"></script>
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <form method="post" asp-controller="Login" asp-action="Index" class="p-4 border rounded shadow-sm bg-light" style="max-width: 400px; width: 100%;">
        <div class="mb-3">
            <label for="txtUserName" class="form-label">ユーザ名</label>
            <input type="text" name="txtUserName" id="txtUserName" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtPassword" class="form-label">パスワード</label>
            <input type="password" name="txtPassword" id="txtPassword" class="form-control" />
        </div>

        <div class="mb-3" id="passwordConfirm">
            <label for="txtPassword2" class="form-label">パスワード(確認用)</label>
            <input type="password" name="txtPassword2" id="txtPassword2" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" id="btnLogin" name="action" value="login" class="btn btn-primary">ログイン</button>
            <button type="button" id="btnRegister" class="btn btn-secondary">新規登録</button>
        </div>
    </form>
</div>